
<%= f.hidden_field :creator_id, value: current_user.id %>

<div class='row'>
  <div class='col-md-6'>
    <div class='row'>
      <div class='col-md-12'>
        <div class='form-group'>
          <%= f.label :name , class: 'control-label' %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
      </div>
    </div>
    <div class='row'>
      <div class='col-md-6'>
        <%= f.label :topic , class: 'control-label' %>
        <%= f.text_field :topic, class: 'form-control' %>
      </div>
      <div class='col-md-6'>
        <%= f.label :date , class: 'control-label' %><br>
        <%= f.date_select :date, class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class='col-md-6'>
    <div class='form-group'>
      <%= f.label :description , class: 'control-label' %>
      <%= f.text_area :description, class: 'form-control', rows: 6 %>
    </div>
  </div>
</div>

<div class='row'>
  <div class='col-md-3'>
    <div class='form-group'>
      <%= f.label :start_time, class: 'control-label' %><br>
      <%= f.time_select :start_time, class: 'form-control' %>
    </div>
  </div>
  <div class='col-md-3'>
    <div class='form-group'>
      <%= f.label :end_time, class: 'control-label' %><br>
      <%= f.time_select :end_time, class: 'form-control'  %>
    </div>
  </div>
  <div class='col-md-6'>
    <div class='form-group'>
      <%= f.label :location , class: 'control-label' %>
      <%= f.text_field :location, class: 'form-control' %>
    </div>
  </div>
</div>
<div class='row'>
  <div class='col-md-6'>
    <div class='form-group'>
      <%= f.label :speaker , class: 'control-label' %> (email)
      <%= f.text_field :speaker, class: 'form-control', value: f.object.speaker.try(:email) %>
    </div>
  </div>
  <br>
  <div class='col-md-3'>
    <div class='form-group'>
      <div class='checkbox-inline'>
        <%= f.radio_button :enabled, true, checked: true %>
        <%= f.label :enabled_true, 'Enable', class: 'control-label' %>
      </div>
      <div class='checkbox-inline'>
        <%= f.radio_button :enabled, false %>
        <%= f.label :enabled_false, 'Disable', class: 'control-label' %>
      </div>
    </div>
  </div>
</div>

