<div class="mid">
  <%= form_for @event, html: { role: "form" } do |f| %>
    <% if @event.errors.any? %>
      <div id="error_explanation">
        <h6><%= pluralize(@event.errors.count, "error") %> prohibited this event from being created:</h6>

        <ul>
        <% @event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <%if alert%><p id="alert"><%= alert %></p><%end%>


    <div class="row">
      <div class="col-md-6">
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.label :name , class: "control-label" %>
              <%= f.text_field :name, class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.label :logo , class: "control-label" %>
              <%= f.file_field :logo, class: "form-control", default: @event.logo_url %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :description , class: "control-label" %>
          <%= f.text_area :description, class: "form-control", rows: 6 %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :start_date, class: "control-label" %>
          <%= f.datetime_select :start_date, class: "form-control" %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :end_date, class: "control-label" %>
          <%= f.datetime_select :end_date, class: "form-control"  %>
        </div>
      </div>
    </div>



    <%= f.fields_for :address, @address do |builder| %>
      <%= render 'addresses/form', address_form: builder %>
    <% end %>
    <%= f.fields_for :contact_detail, @contact_detail do |builder| %>
      <%= render 'contact_details/form', contact_form: builder %>
    <% end %>

    <div class="row">
      <div class="col-md-6">
      </div>
      <div class="col-md-3">
        <div class="form-group">
          <div class='checkbox-inline'>
            <%= f.radio_button :status, true, checked: true %>
            <%= f.label :status_enable, 'Enable', class: "control-label" %>
          </div>
          <div class='checkbox-inline'>
            <%= f.radio_button :status, false %>
            <%= f.label :status_disable, 'Disable', value: false , class: "control-label" %>
          </div>
        </div>
      </div>
      <div class="col-md-1">
        <div class="form-group">
          <%= f.submit 'Submit', class: 'btn btn-success' %>
        </div>
      </div>
      <div class="col-md-1">
        <%= link_to "Cancel", events_path, class: "btn btn-primary" , method: :get %>
      </div>
    </div>
  <% end %>
</div>
