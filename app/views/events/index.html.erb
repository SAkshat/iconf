<div class='row'>
  <div class='col-md-3 col-md-offset-1'>
    <h3>Listing Events </h3>
  </div>
  <div class='col-md-1 col-md-offset-3'>
    <br>
    <%= link_to 'Create Event', new_event_path, class: 'btn btn-success' %>
  </div>
  <div class='col-md-3 col-md-offset-1'>
    <br>
    <%= form_tag search_events_path, method: :get, role: :form, class: 'form-inline' do %>
      <%= text_field_tag :keywords %>
      <%= submit_tag 'Search', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
<br><hr><br>
<% if @events.empty? %>
  <strong>No Events available</strong>
<% else %>
  <%= render @events %>
<% end %>
