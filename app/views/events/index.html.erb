<div class="row">
  <div class="col-md-3 col-md-offset-1">
    <h3>Listing Events </h3>
  </div>
  <div class="col-md-1 col-md-offset-4">
    <br>
    <% if user_signed_in? %>
      <%= link_to 'Create Event', new_user_event_path(current_user), class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
<br><hr><br>
<% if @events.empty? %>
  <strong>No Events available</strong>
<% else %>
  <% @events.each do |event| %>
    <div class="row">
      <%= render event %>
    </div>
    <br><hr>
  <% end %>
<% end %>
