<!DOCTYPE html>
<html>
  <head>
    <meta name='viewport' content='width=device-width, initial-scale=1.0'>
    <title><%= content_for?(:title) ? yield(:title) : 'i Conference Connect 2' %></title>
    <meta name='description' content='<%= content_for?(:description) ? yield(:description) : 'Learn Rails' %>'>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id='banner' class="navbar navbar-default" role="navigation">
      <div class="row col-md-offset-7 email">
        <%= 'Logged in as ' + current_user.email if signed_in? %>
      </div>

      <div class="row">
        <% if current_user && current_user.admin? %>
          <div class='col-md-3'>
            <%= link_to admin_events_path do %>
              <%= image_tag('conf_logo.jpg') %>
            <% end %>
          </div>
          <div class='col-md-3 header'>
            <br>
            Welcome Admin
          </div>
          <br>
          <div class='col-md-1 col-md-offset-2'>
            <%= link_to "Users", admin_users_path, class: 'btn btn-primary', method: :get %>
          </div>
          <div class='col-md-1'>
            <%= link_to 'Events', admin_events_path, class: 'btn btn-primary', method: :get %>
          </div>
        <% else %>
          <div class='col-md-3'>
            <%= link_to root_path do %>
              <%= image_tag('conf_logo.jpg') %>
            <% end %>
          </div>
          <br>
          <div class='col-md-2 col-md-offset-3'>
            <%= link_to "Events I'm Attending", events_path(filter: :attending_events), class: 'btn btn-primary', method: :get if user_signed_in? %>
          </div>
          <div class='col-md-1'>
            <%= link_to 'My Events', events_path(filter: :my_events), class: 'btn btn-primary', method: :get if user_signed_in? %>
          </div>
          <div class='col-md-1'>
            <%= link_to 'Events', root_path, class: 'btn btn-primary', method: :get %>
          </div>
        <% end %>
        <div class='col-md-1'>
          <div class="row">
            <% if user_signed_in? %>
              <%= link_to 'Logout', destroy_user_session_path, class: 'btn btn-primary', :method => :delete %>
            <% else %>
              <%= link_to 'Login', new_user_session_path, class: 'btn btn-primary ' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <main role='main', class='mid'>
      <% flash.each do |type, message| %>
        <div class='alert <%= bootstrap_class_for(type) %> fade in'>
          <button class='close' data-dismiss='alert'>Ã—</button>
          <%= message %>
        </div>
      <% end %>
      <div class='row'>
        <div class='col-md-12'>
          <%= yield %>
        </div>
      </div>
    </main>
  </body>
</html>
